<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laststudypath" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0069FF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Laststudypath.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#00B2FF</item>
        <item name="colorOnPrimary">#F6F6F6</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">

    </style>

    <style name="Theme.Laststudypath.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Laststudypath.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.Laststudypath.Activity" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Change the background color of the ActionBar -->
        <item name="colorPrimary">#4A90E2</item>
        <item name="colorPrimaryDark">#4A90E2</item>

        <!-- Change the text color of the ActionBar -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Change the title text color (optional) -->
        <item name="android:textColorSecondary">@android:color/white</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>