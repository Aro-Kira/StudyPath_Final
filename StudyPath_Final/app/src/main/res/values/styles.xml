<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000000</item> <!-- Set your desired color -->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CircleImageViewStyle" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerSize">50%</item> <!-- Makes it a perfect circle -->
    </style>
    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
    </style>

    <style name="slider_overlay">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="shapeAppearanceOverlay">@style/tooltipShOverylay</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="tooltipShOverylay">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>