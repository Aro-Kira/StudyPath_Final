<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Toggle ON (Checked) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@color/white"/> <!-- Optional border -->
        </shape>
    </item>

    <!-- Toggle OFF (Unchecked) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="@color/gray"/> <!-- Optional border -->
        </shape>
    </item>
</selector>
