<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"/>
            <corners android:radius="25dp"/> <!-- Rounded Corners -->
            <stroke android:width="2dp" android:color="@color/black"/> <!-- Border -->
        </shape>
    </item>

    <!-- Default Button (Enter Focus) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Change to your preferred color -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="@color/dark_blue"/> <!-- Border -->
        </shape>
    </item>
</selector>
