<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEE3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/inter"
            android:text="For Students of National University Fairview Only."
            android:textAlignment="center"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="StudyPaths Logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/khand"
            android:letterSpacing="0.15"
            android:text="StudyPaths"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/inter_semibold"
            android:text="where you can track your goals and progress"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/button_black"
            android:fontFamily="@font/inter_semibold"
            android:letterSpacing="0.55"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/button_text_white" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:letterSpacing="0.55"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </LinearLayout>

    <include
        android:id="@+id/bottom_sheet_signup"
        layout="@layout/bottom_sheet_signup"/>

    <include
        android:id="@+id/bottom_sheet_login"
        layout="@layout/bottom_sheet_login"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

